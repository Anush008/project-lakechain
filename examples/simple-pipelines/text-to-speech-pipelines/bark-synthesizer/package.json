{
  "name": "bark-synthesizer-pipeline",
  "description": "Builds a pipeline for synthesizing text to speech using the Bark model.",
  "version": "0.4.0",
  "private": true,
  "scripts": {
    "build": "npx tsc",
    "build-pkg": "npx lerna run build --scope=bark-synthesizer-pipeline --include-dependencies",
    "clean": "npx rimraf dist/ cdk.out/ node_modules/",
    "audit": "npm audit && npm run synth --silent | cfn_nag",
    "lint": "npx eslint .",
    "synth": "npx cdk synth",
    "deploy": "npx cdk deploy",
    "hotswap": "npx cdk deploy --hotswap",
    "destroy": "npx cdk destroy --all"
  },
  "author": {
    "name": "Amazon Web Services",
    "url": "https://aws.amazon.com"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/awslabs/project-lakechain"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "^20.8.10",
    "esbuild": "^0.20.1",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@project-lakechain/bark-synthesizer": "*",
    "@project-lakechain/nlp-text-processor": "*",
    "@project-lakechain/s3-event-trigger": "*",
    "@project-lakechain/s3-storage-connector": "*"
  },
  "peerDependencies": {
    "aws-cdk-lib": "^2.130.0",
    "constructs": "^10.3.0"
  }
}
